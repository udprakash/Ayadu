<h1>Listing pins</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Image</th>

      <th>Description</th>
      <th>User</th>

      <th>Daily</th>
      <th>Weekly</th>
      <th>Monthly</th>
      <th>Advance</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @pins.each do |pin| %>
      <tr>
        <td><%= pin.title %></td>
        <td><%= image_tag pin.image.url(:medium) %></td>

        <td><%= pin.description %></td>
        <td><%= pin.user.firstname %></td>

        <td>Rs :<%= pin.daily %></td>
        <td><%= pin.weekly %></td>
        <td><%= pin.monthly %></td>
        <td><%= pin.advance %></td>
        <td><%= link_to 'Show', pin %></td>

        <% if pin.user == current_user %>
        <td><%= link_to 'Edit', edit_pin_path(pin) %></td>
        <td><%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
<%= link_to 'New Pin', new_pin_path %>
<% end %>
